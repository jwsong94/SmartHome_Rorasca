<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEDEDE">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/imageView7"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:keepScreenOn="true"
        android:src="@drawable/list3_title"/>

    <ImageButton
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/f5"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:background="@android:color/transparent"
        android:layout_gravity="right"
        android:layout_x="303dp"
        android:layout_y="22dp"
        android:onClick="onButtonClicked" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_x="1dp"
        android:layout_y="48dp">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:id="@+id/imageView18"
            android:adjustViewBounds="true"
            android:src="@drawable/led_off"
            android:scaleType="centerCrop"
            android:layout_marginTop="69dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="400dp"
            android:layout_height="55dp"
            android:id="@+id/imageView19"
            android:src="@drawable/list3_text2"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/imageView18"
            android:layout_alignParentStart="true" />

        <ToggleButton
            android:layout_width="170dp"
            android:layout_height="42dp"
            android:id="@+id/imageButton3"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:textOn= ""
            android:textOff=""
            android:background="@drawable/list3_button2"
            android:onClick="onButton1Clicked"
            android:layout_below="@+id/imageView19"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:checked="false" />
    </RelativeLayout>

</AbsoluteLayout>