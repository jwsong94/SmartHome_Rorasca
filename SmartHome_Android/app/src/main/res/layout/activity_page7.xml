<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEDEDE">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/imageView7"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:keepScreenOn="true"
        android:src="@drawable/list7_title"/>

    <ImageButton
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/f5"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:background="@android:color/transparent"
        android:layout_gravity="right"
        android:layout_x="303dp"
        android:layout_y="22dp"
        android:onClick="onButtonClicked" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_x="1dp"
        android:layout_y="48dp">

        <ImageView
            android:layout_width="290dp"
            android:layout_height="210dp"
            android:id="@+id/imageView8"
            android:src="@drawable/list7_visitor"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="23dp"
            android:layout_below="@+id/imageView9"
            android:layout_alignEnd="@+id/imageView9" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:id="@+id/imageView9"
            android:background="@android:color/transparent"
            android:textSize="15dp"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="4dp"
            android:layout_alignTop="@+id/imageView11"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="135dp"
            android:layout_height="35dp"
            android:id="@+id/imageView11"
            android:src="@drawable/list7_text1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="53dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView8" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:id="@+id/imageView20"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/list7_text3"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/imageView8"
            android:layout_alignEnd="@+id/imageView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView3"
            android:layout_marginBottom="7dp"
            android:layout_alignBottom="@+id/imageView20"
            android:layout_toStartOf="@+id/imageView20" />

        <ImageView
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:id="@+id/imageView21"
            android:src="@drawable/list7_text2"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="39dp"
            android:layout_below="@+id/imageView20"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton4"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:src="@drawable/list7_button"
            android:layout_alignBottom="@+id/imageView22"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:onClick="onButtonClicked2" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:id="@+id/imageView22"
            android:src="@drawable/list7_child"
            android:layout_below="@+id/imageView21"
            android:layout_toEndOf="@+id/imageButton4"
            android:layout_marginStart="10dp" />

        <Button
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:background="@drawable/on"
            android:id="@+id/button2"
            android:onClick="BellOn"
            android:layout_above="@+id/imageView9"
            android:layout_alignEnd="@+id/imageButton4" />

        <Button
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:id="@+id/button3"
            android:background="@drawable/off"
            android:onClick="BellOff"
            android:layout_above="@+id/imageView9"
            android:layout_alignEnd="@+id/imageView8" />

        <WebView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/webView3"
            android:layout_below="@+id/imageView11"
            android:layout_alignStart="@+id/imageView8"
            android:layout_alignBottom="@+id/imageView8"
            android:layout_alignEnd="@+id/imageView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView11"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignStart="@+id/imageView8"
            android:layout_toStartOf="@+id/imageView20"
            android:layout_alignEnd="@+id/textView3" />

    </RelativeLayout>

</AbsoluteLayout>